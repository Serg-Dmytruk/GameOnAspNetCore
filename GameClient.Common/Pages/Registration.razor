<h3>REGISTRATION</h3>

<div class="divCenter">
    @if (!waitingResponse)
    {
        <input type="text" @bind="LoginData.Login" placeholder="Login" />
        <input type="password" @bind="LoginData.Password" placeholder="Password" />
        <input type="password" @bind="LoginData.PasswordCopy" placeholder="Repeat password" />
        <input type="text" @bind="LoginData.UserName" placeholder="User name" />
        <button class="centerOnParrentHorizontal" @onclick="RegisterUser">Login</button>
    }
    else
    {
        <div class="spinner-border centerOnParrentHorizontal" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    }

</div>

@if (!validate)
{
    <pre class="error">@errorMessage</pre>
}
